<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration
    PUBLIC "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.url">jdbc:h2:mem:db;DB_CLOSE_DELAY=-1</property>
		<property name="hibernate.connection.driver_class">org.h2.Driver</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password"></property>
		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>
		<property name="hibernate.show_sql">true</property>
		<property name="hibernate.hbm2ddl.auto">create-drop</property>
		
		<mapping package="ma.glasnost.orika.test"/>
		<mapping class="ma.glasnost.orika.test.unenhance.Author"/>
		<mapping class="ma.glasnost.orika.test.unenhance.Book"/>
		
	</session-factory>
</hibernate-configuration>